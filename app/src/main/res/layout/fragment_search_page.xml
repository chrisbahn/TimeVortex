                android:padding="4dp"
                android:background="@null"
                android:src="@drawable/doctor04"
                />
            <ImageButton
                android:id="@+id/imageButtonDoctor05"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="0.5"
                android:scaleType="fitCenter"
                android:padding="4dp"
                android:background="@null"
                android:src="@drawable/doctor05"
                />
            <ImageButton
                android:id="@+id/imageButtonDoctor06"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="0.5"
                android:scaleType="fitCenter"
                android:padding="4dp"
                android:background="@null"
                android:src="@drawable/doctor06"
                />
            <ImageButton
                android:id="@+id/imageButtonDoctor07"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="0.5"
                android:scaleType="fitCenter"
                android:padding="4dp"
                android:background="@null"
                android:src="@drawable/doctor07"
                />
            <ImageButton
                android:id="@+id/imageButtonDoctor08"
