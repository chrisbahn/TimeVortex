                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="0.5"
                android:scaleType="fitCenter"
                android:padding="4dp"
                android:background="@null"
                android:src="@drawable/doctor01"
                />
            <ImageButton
                android:id="@+id/imageButtonDoctor02"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="0.5"
                android:scaleType="fitCenter"
                android:padding="4dp"
                android:background="@null"
                android:src="@drawable/doctor02"
                />
            <ImageButton
                android:id="@+id/imageButtonDoctor03"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="0.5"
                android:scaleType="fitCenter"
                android:padding="4dp"
                android:background="@null"
                android:src="@drawable/doctor03"
                />
            <ImageButton
                android:id="@+id/imageButtonDoctor04"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="0.5"
                android:scaleType="fitCenter"
                android:padding="4dp"
                android:background="@null"
                android:src="@drawable/doctor04"
                />
            <ImageButton
                android:id="@+id/imageButtonDoctor05"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="0.5"
                android:scaleType="fitCenter"
                android:padding="4dp"
                android:background="@null"
                android:src="@drawable/doctor05"
                />
            <ImageButton
                android:id="@+id/imageButtonDoctor06"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="0.5"
                android:scaleType="fitCenter"
                android:padding="4dp"
                android:background="@null"
                android:src="@drawable/doctor06"
                />
            <ImageButton
                android:id="@+id/imageButtonDoctor07"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="0.5"
                android:scaleType="fitCenter"
                android:padding="4dp"
                android:background="@null"
                android:src="@drawable/doctor07"
                />
            <ImageButton
                android:id="@+id/imageButtonDoctor08"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="0.5"
                android:scaleType="fitCenter"
                android:padding="4dp"
                android:background="@null"
                android:src="@drawable/doctor08"
                />
            <ImageButton
                android:id="@+id/imageButtonDoctor09"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="0.5"
                android:scaleType="fitCenter"
                android:padding="4dp"
                android:background="@null"
                android:src="@drawable/doctor09"
                />
            <ImageButton
                android:id="@+id/imageButtonDoctor10"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="0.5"
                android:scaleType="fitCenter"
                android:padding="4dp"
                android:background="@null"
                android:src="@drawable/doctor10"
                />
            <ImageButton
                android:id="@+id/imageButtonDoctor11"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="0.5"
                android:scaleType="fitCenter"
                android:padding="4dp"
                android:background="@null"
                android:src="@drawable/doctor11"
                />
            <ImageButton
                android:id="@+id/imageButtonDoctor12"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="0.5"
                android:scaleType="fitCenter"
                android:padding="4dp"
                android:background="@null"
                android:src="@drawable/doctor12"
                />
        </GridLayout>

            <TextView android:id="@+id/filter_by_villains_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Classic villains"
                android:textColor="@color/white"
                />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="6">
            <ImageButton
                android:id="@+id/imageButtonDaleks"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="0.5"
                android:scaleType="fitCenter"
                android:padding="4dp"
                android:background="@null"
                android:src="@drawable/icondaleks"
                />
            <ImageButton
                android:id="@+id/imageButtonCybermen"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="0.5"
                android:scaleType="fitCenter"
                android:padding="4dp"
                android:background="@null"
                android:src="@drawable/iconcyberman"
                />
            <ImageButton
                android:id="@+id/imageButtonIceWarriors"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="0.5"
                android:scaleType="fitCenter"
                android:padding="4dp"
                android:background="@null"
                android:src="@drawable/iconicewarrior"
                />
            <ImageButton
                android:id="@+id/imageButtonSontarans"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="0.5"
                android:scaleType="fitCenter"
                android:padding="4dp"
                android:background="@null"
                android:src="@drawable/iconsontaran"
                />
            <ImageButton
                android:id="@+id/imageButtonMaster"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="0.5"
                android:scaleType="fitCenter"
                android:padding="4dp"
                android:background="@null"
                android:src="@drawable/iconmaster"
                />
            <ImageButton
                android:id="@+id/imageButtonWeepingAngels"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="0.5"
                android:scaleType="fitCenter"
                android:padding="4dp"
                android:background="@null"
                android:src="@drawable/iconweepingangels"
                />

        </GridLayout>
    </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"></LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/tardisblue"
            android:padding="4dp">

            <Button android:id="@+id/search_by_title_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/search_by_title_button_label"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>