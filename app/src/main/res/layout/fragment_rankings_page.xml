<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout android:id="@+id/rankings_page_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:background="@color/list_item_bg"
        android:padding="4dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/tardisblue"
            android:padding="4dp">
        <TextView android:id="@+id/rankings_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/rankings_page_layout"
            android:text="@string/rankings_main_label"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/headline"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"></LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/tardisblue"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Get rankings of..."
                android:textColor="@color/white"
                android:id="@+id/textViewRankingsHowManyLabel" />

            <RadioGroup
                android:id="@+id/RadioGroupRankingNumber"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Top 10"
                    android:id="@+id/RadioButtonTop10" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Bottom 10"
                    android:id="@+id/RadioButtonBottom10" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="All"
                    android:id="@+id/RadioButtonAll" />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"></LinearLayout>



        <LinearLayout
            android:orientation="vertical"
            android:background="@color/tardisblue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="From these sources..."
                android:textColor="@color/white"
                android:id="@+id/textViewCriticRankingsLabel" />

            <RadioGroup
                android:id="@+id/RadioGroupCriticLists"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Aggregate Ranking of ALL critic and fan lists"
                    android:id="@+id/RadioButtonAggregateRanking" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Time Vortex editors' ranking"
                    android:id="@+id/RadioButtonTimeVortexRanking" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Doctor Who Magazine 2009"
                    android:id="@+id/RadioButtonDWMag2009" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="BBC Critics Top 10 2013"
                    android:id="@+id/RadioButtonBBC2013" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="AV Club 2013"
                    android:id="@+id/RadioButtonAVC2013" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Doctor Who Magazine 2014"
                    android:id="@+id/RadioButtonDWMag2014" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="io9 2014"
                    android:id="@+id/RadioButtonio92014" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="L.M. Myles 2014"
                    android:id="@+id/RadioButtonLMMyles2014" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="My Time Vortex rankings"
                    android:id="@+id/RadioButtonUserRankings" />

            </RadioGroup>



        </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"></LinearLayout>



        <LinearLayout
            android:orientation="vertical"
            android:background="@color/tardisblue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show only:"
                android:id="@+id/textViewMyListsHeader"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Shows on my watchlist"
                android:id="@+id/checkBoxWantToSeeIt" />

            <RadioGroup
                android:id="@+id/radioGroupSeenIt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Shows I've seen"
                    android:textColor="@color/white"
                    android:id="@+id/radioButtonSeenItYes" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Shows I haven't"
                    android:textColor="@color/white"
                    android:id="@+id/radioButtonSeenItNo" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="All"
                    android:textColor="@color/white"
                    android:id="@+id/radioButtonSeenItAll" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"></LinearLayout>

        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/tardisblue"
        android:orientation="vertical"
            android:padding="4dp">

        <TextView android:id="@+id/filter_by_x_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filter by character:"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView android:id="@+id/filter_by_doctor_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The 12 (more or less) Doctors"
                android:textStyle="bold"
                android:textColor="@color/white" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="6">

            <ImageButton
